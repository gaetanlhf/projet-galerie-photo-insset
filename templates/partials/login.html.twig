<div class="card">
	<div class="card-body text-center">
		<h5 class="card-title">
			<i class="fa fa-sign-in fa-fw" aria-hidden="true"></i>
			Connexion</h5>
		<h6 class="card-subtitle mb-2 text-muted">Pour accéder à votre galerie !</h6>

		{% if error %}
			<div class="alert alert-danger">
				<i class="fa fa-exclamation-triangle fa-fw" aria-hidden="true"></i>
				{{ error.messageKey|trans(error.messageData, 'security') }}</div>
		{% endif %}

		<form action="{{ path('app_home') }}" method="post">

			<div class="input-group">
				<span class="input-group-text bg-primary">
					<i class="fa fa-envelope fa-fw text-white" aria-hidden="true"></i>
				</span>
				<input type="email" class="form-control" value="{{ last_username }}" name="email" id="inputEmail" placeholder="Courriel" autocomplete="email" required autofocus>
			</div>
			<div class="input-group">
				<span class="input-group-text bg-primary">
					<i class="fa fa-key fa-fw text-white" aria-hidden="true"></i>
				</span>
				<input type="password" class="form-control" name="password" id="inputPassword" placeholder="Mot de passe" autocomplete="current-password" required>
			</div>

			<input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">

			<button class="btn btn-primary text-center mt-2" type="submit">
				<i class="fa fa-rocket fa-fw" aria-hidden="true"></i>
				Go !
			</button>
		</form>
	</div>
</div>
