<h1>Galerie photo de
	{{ username }}</h1><br>
{% for message in app.flashes('gallery_err') %}
	<div class="alert alert-danger">
		<i class="fa fa-exclamation-triangle fa-fw" aria-hidden="true"></i>
		{{ message }}<br>
	</div>
{% endfor %}
{% if (images is defined) and (images != null) %}
	<div class="row justify-content-md-center">
		{% for image in images %}
			<div class="d-flex col-xl-3 col-lg-3 col-md-6 col-sm-12 align-items-center">
				<a href="{{ image.fileLocalisation }}" data-toggle="lightbox" data-gallery="gallery">
					<div class="card d-flex flex-fill align-items-center">
						<img src="{{ image.fileLocalisation|imagine_filter('thumbnail_small') }}" class="d-flex img-fluid card-img-top scale-on-hover">
					</div>
				</a>
			</div>
		{% endfor %}
		{% if images.haveToPaginate %}
			<div class="d-flex justify-content-center pt-3 pb-3">
				{{ pagerfanta(images) }}
			</div>
		{% endif %}
	</div>
{% endif %}
